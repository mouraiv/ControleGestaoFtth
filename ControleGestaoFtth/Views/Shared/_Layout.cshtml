<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestao Ftth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleGestaoFtth.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container-grid">

        <div class="nav-user bg-primary">

            <div>
                <i class="fa fa-bars" role="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample"></i>
            </div>
            <div class="title">
                <div class="title-text"><a role="button" asp-area="" asp-controller="Dashboard" asp-action="Index">GESTÃO FTTH</a></div>
            </div>
            <div>
                <a>Função | Usuário</a><i class="fa fa-user" aria-hidden="true"></i>
            </div>

         </div>

       <div class="nav-bar">

            <div class="menu collapse" id="collapseExample">
                <div class="sub-title"><a>BASE DE DADOS</a></div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Construtora" asp-action="Index"><i class="fa fa-database" aria-hidden="true"></i>FTTH</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-database" aria-hidden="true"></i>Netwin</a>
                    </li>
                </ul>
                <div class="sub-title"><a>FERRAMENTAS</a></div>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-line-chart" aria-hidden="true"></i>Análise</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-tasks" aria-hidden="true"></i>Gestão</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-cubes" aria-hidden="true"></i>Projeto</a>
                    </li>
                </ul>
            </div>
       </div>
       <div class="main-container">
            @RenderBody()
       </div>
        <div class="footer-st">
            <a>&copy; 2022 - Controle de Gestao FTTH</a>
        </div>

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
