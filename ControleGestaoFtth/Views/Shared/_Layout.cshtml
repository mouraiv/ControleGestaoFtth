<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestao Ftth</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleGestaoFtth.styles.css" asp-append-version="true" />
</head>
<body class="bk-full">
    <div class="nav-user bg-primary"><a>Função | Usuário</a><i class="fa fa-user" aria-hidden="true"></i></div>
    <div class="nav-bar d-flex flex-column position-absolute top-0 bottom-0 vh-100">
        <div class="title bg-primary"><div class="border border-white title-text text-center"><a>GESTÃO FTTH</a></div></div>
        <div class="p-3 vh-100">
            <div class="sub-title"><a>BASE DE DADOS</a></div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-database" aria-hidden="true"></i>FTTH</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-database" aria-hidden="true"></i>Netwin</a>
                        </li>
                     </ul>
            <div class="sub-title"><a>FERRAMENTAS</a></div>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-line-chart" aria-hidden="true"></i>Análise</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa fa-tasks" aria-hidden="true"></i>Gestão</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-cubes" aria-hidden="true"></i>Projeto</a>
                        </li>
                    </ul>
                </div>
        <div class="text-center footer-st py-4">
            <a>&copy; 2022 - Controle de Gestao FTTH</a>
        </div>
    </div>  
    <div class="position-relative bk-full">
        <main role="main" class="position-absolute p-4 main-container">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
